doctype html
html(lang='en')
    head
        title= title
        
        link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css' integrity='sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T' crossorigin='anonymous')
        
        link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
    body
        div.container
            nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
                a.navbar-brand(href='#') Employee Database
                button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarNav' aria-controls='navbarNav' aria-expanded='false' aria-label='Toggle navigation')
                    span.navbar-toggler-icon
                #navbarNav.collapse.navbar-collapse
                    ul.navbar-nav
                        li.nav-item(class=nav === 'list' ? 'active' : '')
                            a.nav-link(href='/list')
                                | List Employees 
                            span.sr-only (current)
                        li.nav-item(class=nav === 'create' ? 'active' : '')
                            a.nav-link(href='/create') New Employee
            if message
                .alert.alert-warning.alert-dismissible.fade.show.mt-5(role='alert')
                    strong= message
                    button.close(type='button' data-dismiss='alert' aria-label='Close')
                        span(aria-hidden='true') Ã—

            div.container.pt-5
                block content

